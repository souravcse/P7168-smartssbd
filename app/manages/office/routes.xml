<resources>


    <controller val="ManageConfig" pageTitle="Manage Message" validationToken="false" auth="true">

        <route val="config" get="manageConfigInfo" post="manageConfigInfoPost"/>
    </controller>

    <controller val="ManageMessage" pageTitle="Manage Message" validationToken="false" auth="true">

        <route val="message-list" get="manageMessageList"/>
    </controller>

    <controller val="ManageServices" pageTitle="Manage Project" validationToken="false" auth="true">

        <route val="service-list/{sl}/remove" post="manageServiceRemovePost"/>
        <route val="service-list/{sl}/info/json" post="manageServiceInfoJson"/>
        <route val="service-list/{sl}/update" post="manageServiceUpdatePost"/>
        <route val="service-list/create" post="manageServiceCreatePost"/>
        <route val="service-list" get="manageServiceList"/>
    </controller>

    <controller val="ManageProject" pageTitle="Manage Project" validationToken="false" auth="true">

        <route val="project-list/{sl}/remove" post="manageProjectRemovePost"/>
        <route val="project-list/{sl}/info/json" post="manageProjectInfoJson"/>
        <route val="project-list/{sl}/update" post="manageProjectUpdatePost"/>
        <route val="project-list/create" post="manageProjectCreatePost"/>
        <route val="project-list" get="manageProjectList"/>
    </controller>

    <controller val="ManageClient" pageTitle="Manage Client" validationToken="false" auth="true">

        <route val="client-list/{sl}/info/json" post="manageClientInfoJson"/>
        <route val="client-list/{sl}/remove" post="manageClientRemovePost"/>
        <route val="client-list/{sl}/update" post="manageClientUpdatePost"/>
        <route val="client-list/create" post="manageClientCreatePost"/>
        <route val="client-list" get="manageClientList"/>
    </controller>

</resources>